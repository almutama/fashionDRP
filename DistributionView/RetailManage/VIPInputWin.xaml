<Window x:Class="DistributionView.RetailManage.VIPInputWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        ShowInTaskbar="False" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow"
        Title="VIP输入" SizeToContent="WidthAndHeight">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Image Source="pack://application:,,,/HabilimentERP;Component/Images/agent.png" Stretch="None" Grid.RowSpan="2" Margin="0 0 5 0" />
            <TextBlock x:Name="tbRemark" Grid.Column="1" />
            <TextBox x:Name="txtVIPCode" Grid.Row="1" Grid.Column="1" MinWidth="140" FontSize="20" Margin="0 5 0 5" />
        </Grid>
        <telerik:RadButton x:Name="btnOK" Grid.Row="1" Content="确定" HorizontalAlignment="Right" Width="60" IsDefault="True" Click="btnOK_Click" />
    </Grid>
</Window>
